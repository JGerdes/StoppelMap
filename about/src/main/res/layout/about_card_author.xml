<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?materialCardViewOutlineStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="?cardMarginHorizontal"
    android:layout_marginTop="?cardMarginVertical"
    android:layout_marginEnd="?cardMarginHorizontal"
    android:layout_marginBottom="?cardMarginVertical"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="?cardPadding"
        >
        <TextView
            android:id="@+id/work"
            style="@style/TextAppearance.StoppelMapTheme.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Idee, Programmierung"
            />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.StoppelMapTheme.Headline6"
            app:layout_constraintStart_toStartOf="@id/work"
            app:layout_constraintTop_toBottomOf="@id/work"
            tools:text="Jonas Gerdes"
            />
        <TextView
            android:id="@+id/urlWebsite"
            style="?textAppearanceBodyLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/marginOtherContent"
            android:drawableStart="@drawable/ic_website"
            app:layout_constraintStart_toStartOf="@id/work"
            app:layout_constraintTop_toBottomOf="@id/name"
            tools:text="https://jonasgerdes.com"
            />
        <TextView
            android:id="@+id/urlGitHub"
            style="?textAppearanceBodyLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/marginSameContent"
            android:autoLink="web"
            android:drawableStart="@drawable/ic_github"
            app:layout_constraintStart_toStartOf="@id/work"
            app:layout_constraintTop_toBottomOf="@id/urlWebsite"
            tools:text="https://github.com/JGerdes"
            />
        <TextView
            android:id="@+id/urlGitLab"
            style="?textAppearanceBodyLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/marginSameContent"
            android:autoLink="web"
            android:drawableStart="@drawable/ic_gitlab"
            app:layout_constraintStart_toStartOf="@id/work"
            app:layout_constraintTop_toBottomOf="@id/urlGitHub"
            tools:text="https://github.com/JGerdes"
            />
        <TextView
            android:id="@+id/mail"
            style="?textAppearanceBodyLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/marginSameContent"
            android:autoLink="email"
            android:drawableStart="@drawable/ic_email"
            app:layout_constraintStart_toStartOf="@id/work"
            app:layout_constraintTop_toBottomOf="@id/urlGitLab"
            tools:text="moin@jonasgerdes.com"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>