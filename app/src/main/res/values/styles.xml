<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">?colorPrimaryDark</item>
        <item name="translucentStatusBarColor">@color/black_24</item>

        <item name="android:textColorPrimary">@color/light_text_primary</item>
        <item name="android:textColorSecondary">@color/light_text_secondary</item>
        <item name="android:textColorTertiary">@color/light_text_tertiary</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="imageCardTitleColor">@color/dark_text_primary</item>
        <item name="lightTitleColor">@color/dark_text_primary</item>
        <item name="lightTextColor">@color/dark_text_secondary</item>

        <item name="windowBackgroundColor">@color/light_window_background</item>
        <item name="inputBackgroundColor">@color/light_input_background</item>
        <item name="dimWindowBackgroundColor">@color/dim_window_background</item>

        <item name="transportationBackgroundColor">@color/background_transportation</item>
        <item name="eventsBackgroundColor">@color/background_feed</item>
        <item name="feedBackgroundColor">@color/background_feed</item>
        <item name="aboutBackgroundColor">@color/background_feed</item>

        <item name="dividerColor">@color/light_divider</item>

        <item name="cardBackgroundColor">@color/light_card_background</item>
        <item name="cardBackgroundColorHighlight">@color/highlight_card_background</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardMargin">8dp</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/roboto_slab_regular</item>
    </style>


    <style name="Widget.EditText.Rounded" parent="Widget.AppCompat.EditText">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="CenterToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/roboto_slab_thin</item>
        <item name="android:textAppearance">@style/CenterToolbarTextAppearance</item>
    </style>

    <style name="CenterToolbarTextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">?imageCardTitleColor</item>
        <item name="android:fontFamily">@font/roboto_slab_thin</item>
    </style>

    <style name="CenterToolbarTextAppearance.Expanded">
        <item name="android:textSize">32sp</item>
    </style>


    <style name="TextCaption" parent="android:TextAppearance.Material.Caption">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLink" parent="android:TextAppearance">
        <item name="android:autoLink">web</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorLink">?android:textColorPrimary</item>
    </style>
</resources>
