<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="?cardMargin"
    android:layout_marginEnd="?cardMargin"
    android:layout_marginBottom="?cardMargin"
    android:elevation="?cardElevation"
    app:cardBackgroundColor="?cardBackgroundColor"
    app:cardCornerRadius="?cardCornerRadius">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/work"
            tools:text="RxBinding" />

        <TextView
            android:id="@+id/author"
            style="@style/TextLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_author_black_24dp"
            app:layout_constraintTop_toBottomOf="@id/name"
            tools:text="Jake Wharton" />

        <TextView
            android:id="@+id/license"
            style="@style/TextLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableStart="@drawable/ic_license_black_24dp"
            app:layout_constraintTop_toBottomOf="@id/author"
            tools:text="Apache 2" />

        <TextView
            android:id="@+id/urlGitHub"
            style="@style/TextLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:autoLink="web"
            android:drawableStart="@drawable/ic_github_black_24dp"
            app:layout_constraintTop_toBottomOf="@id/license"
            tools:text="https://github.com/JakeWharton/RxBinding" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>