<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/collectionCard"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="256dp"
    android:layout_height="192dp"
    android:layout_margin="8dp"
    android:elevation="4dp"
    tools:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardCornerRadius="16dp">

    <ImageView
        android:id="@+id/collectionCardBackground"
        android:layout_width="match_parent"
        android:alpha="0.2"
        android:scaleType="centerCrop"
        android:layout_height="match_parent" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/collectionTitle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:fontFamily="@font/roboto_slab_thin"
            android:textColor="?imageCardTitleColor"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/text"
            tools:text="Kühlings Niedersachsenhalle" />

        <TextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/roboto_slab_light"
            android:textColor="?imageCardTitleColor"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="10 weitere Stände" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>