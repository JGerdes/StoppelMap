<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp">

    <RelativeLayout
        style="@style/SelectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">


        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:layout_toLeftOf="@+id/map_view"
            android:fontFamily="sans-serif-light"
            android:maxLines="2"
            android:textColor="@color/text_primary_light"
            android:textSize="@dimen/card_title_size"
            tools:text="Vechta Flugplatz"/>

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_directions_bus_black_24dp"
            android:tint="@color/text_primary_light"/>

        <TextView
            android:id="@+id/next_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/icon"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/map_view"
            android:layout_toRightOf="@id/icon"
            android:textColor="@color/text_secondary_light"
            android:textSize="@dimen/card_subtext_size"
            tools:text="um 18:34 Uhr ab"/>

        <TextView
            android:id="@+id/next_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/next_time"
            android:layout_margin="8dp"
            android:layout_toLeftOf="@id/map_view"
            android:layout_toRightOf="@id/icon"
            android:textColor="@color/text_secondary_light"
            android:textSize="@dimen/card_subtext_size"
            tools:text="Th.-HeuÃŸ-Str./H-Wilhlem-Kopf-Str."/>

        <com.google.android.gms.maps.MapView
            xmlns:map="http://schemas.android.com/apk/res-auto"
            android:id="@id/map_view"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            map:liteMode="true"
            tools:background="#FFEEBB"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/map_view"
            android:padding="4dp"
            >

            <ImageView
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:src="@drawable/ic_star_border_white_24dp"/>

            <Button
                android:id="@+id/details"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Haltestellen"
                android:textColor="@color/text_primary_light"/>
        </FrameLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>